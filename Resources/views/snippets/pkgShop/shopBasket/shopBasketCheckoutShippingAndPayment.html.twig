{#
    description: show the shipping / Payment step
    vars
        sSupportMail
        sBackLink
        all from  /pkgShop/shippingAndPayment/selectShippingGroup.html.twig
        all from /pkgShop/shippingAndPayment/selectPayment.html.twig

#}


<div class="snippetShopBasketShopBasketCheckoutShippingAndPayment row">
    <div class="col-xs-12">
        <h1>{{"chameleon_system_chameleon_shop_theme.checkout.shipping_and_payment_headline" | trans}}</h1>

        {% if aShippingGroups|length < 1 %}
            <div class="error">{{"chameleon_system_chameleon_shop_theme.checkout.shipping_unavailable" | trans({'%sMail%': sSupportMail}) }}</div><br />
        {% endif %}

    </div>

    {% if aShippingGroups|length > 0 %}
        <div class="col-xs-12 col-md-3">
            {% include "/pkgShop/shippingAndPayment/selectShippingGroup.html.twig" %}
        </div>
        <div class="col-xs-12 col-md-9">
            {% include "/pkgShop/shippingAndPayment/selectPayment.html.twig" %}
        </div>
    {% endif %}
    <div class="col-xs-12 col-sm-6 col-md-3 col-md-offset-3">
        <a href="{{sBackLink | raw}}" class="btn btn-default btn-lg btn-block">{{"chameleon_system_chameleon_shop_theme.checkout.shipping_previous_step" | trans}}</a>
    </div>
    {% if aShippingGroups|length > 0 %}
        <div class="col-xs-12 col-sm-6 col-md-3 pull-right">
            <button id="primarypaymentbutton" class="btn btn-lg btn-success btn-block" type="button">{{"chameleon_system_chameleon_shop_theme.checkout.shipping_next_step" | trans}}</button>
        </div>
    {% endif %}
</div>