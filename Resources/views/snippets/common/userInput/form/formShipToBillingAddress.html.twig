
{% if isShipToBillingAddress %}
    {% set sChecked = 'checked="checked"' %}
    {% set sActiveValue = '1' %}
{% else %}
    {% set sChecked = '' %}
    {% set sActiveValue = '0' %}
{% endif %}


<div class="marginTop12">
    <script type="text/javascript">
        //<![CDATA[
        document.write('<input type="hidden" name="ChangeShipToBillingState" value="" />');
        document.write('<input type="hidden" name="bShipToBillingAddress" value="" />');
        {% if isDhlPackstation == false %}
            document.write('<div class="form-group">');
                document.write('<div class="checkbox {{ formDefaultSubmitClass }}">');
                    document.write('<label class="checkbox font19 colorblack2">');
                        document.write('<input type="checkbox" name="bShipToBillingAddressX" value="{{ sActiveValue }}" {{ sChecked }}" ' +
                           'onclick="document.user.ChangeShipToBillingState.value=\'1\'; if (document.user.bShipToBillingAddressX.checked) document.user.bShipToBillingAddress.value =\'1\'; else document.user.bShipToBillingAddress.value =\'0\'; document.user.submit()"' +
                           '>{{ useShippingAsBillingAddress }}');
                    document.write('</label>');
                document.write('</div>');
            document.write('</div>');
        {% endif %}
        //]]>
    </script>
    <noscript>
        <input type="hidden" name="bShipToBillingAddress" value="{% if isShipToBillingAddress %}0{% else %}1{% endif %}">
        {% if isDhlPackstation == false %}
            <input type="submit" name="ChangeShipToBillingState" value="{{ sChangeShippingButtonText }}">
        {% endif %}
    </noscript>
</div>

{% if errorMessage|length > 0 %}
    <div class="row">
        <div class="marginTop4 col-xs-12 col-sm-10 col-md-7 col-lg-6">{{ errorMessage|raw }}</div>
    </div>
{% endif %}

